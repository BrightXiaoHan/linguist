{
	"name": "browser-addon",
	"version": "3.0.0",
	"description": "Browser addon for fast translate text and pages",
	"license": "GPL-3.0",
	"author": "Vitonsky <https://github.com/vitonsky>",
	"scripts": {
		"clean": "rm -rf ./build",
		"packAll": "cd build && ../scripts/zipAll.sh && cd ..",
		"test:buildArchives": "cd build && ../scripts/testBuildArchives.sh && cd ..",
		"build:all": "npm run clean && npm run build:firefox && npm run build:chromium && npm run build:chromium-google-store && npm run packAll && npm run test:buildArchives",
		"build:dev": "export EXT_TARGET=firefox && webpack-cli -w",
		"build:dev-fast": "export FAST_BUILD=on && export EXT_TARGET=firefox && webpack-cli -w",
		"build:tokens": "themekit build -c themekit.config.json",
		"build:chromium": "export NODE_ENV=production && export EXT_TARGET=chromium && webpack-cli",
		"build:chromium-google-store": "export NODE_ENV=production && export EXT_TARGET=chromium-google-store && webpack-cli",
		"build:firefox": "export NODE_ENV=production && export EXT_TARGET=firefox && webpack-cli",
		"run:mobile-firefox": "cd build/dev/firefox && web-ext run -t firefox-android --adb-device \"$ADB_DEVICE_TO_DEBUG\" --firefox-apk org.mozilla.fenix",
		"release:patch": "npm version patch",
		"release:patchManually": "npm version patch && build:all",
		"prettify": "prettier --write **/*.{ts,tsx,js} && eslint --fix **/*.{ts,tsx,js}",
		"prepare": "husky install"
	},
	"dependencies": {
		"@bem-react/classname": "^1.5.10",
		"@bem-react/core": "^3.0.1",
		"@bem-react/di": "^2.2.5",
		"@popperjs/core": "^2.11.0",
		"@react-aria/interactions": "^3.7.0",
		"@react-aria/utils": "^3.10.0",
		"@translate-tools/core": "^0.0.17",
		"fp-ts": "^2.10.5",
		"google-tts-api": "^2.0.2",
		"idb": "^6.1.2",
		"io-ts": "^2.2.16",
		"lodash": "^4.17.21",
		"papaparse": "^5.3.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.2",
		"react-elegant-ui": "^0.1.33",
		"react-shadow": "^18.6.2",
		"webextension-polyfill-ts": "^0.22.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.16.4",
		"@babel/preset-react": "^7.13.13",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@svgr/webpack": "^5.5.0",
		"@types/lodash": "^4.14.177",
		"@types/node": "^15.12.1",
		"@types/papaparse": "^5.2.5",
		"@types/react": "^17.0.37",
		"@types/react-dom": "^17.0.6",
		"@types/resize-observer-browser": "^0.1.5",
		"@typescript-eslint/eslint-plugin": "^4.8.1",
		"@typescript-eslint/parser": "^4.8.1",
		"@yandex/themekit": "^1.6.7",
		"babel-loader": "^8.2.2",
		"convert-svg-to-png": "^0.5.0",
		"copy-webpack-plugin": "^6.4.1",
		"crx": "^5.0.1",
		"css-loader": "^5.2.6",
		"eslint": "^7.27.0",
		"eslint-plugin-react": "^7.27.1",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.0.0",
		"mini-css-extract-plugin": "^1.6.0",
		"postcss-loader": "^4.3.0",
		"postcss-rem-to-pixel": "^4.1.2",
		"prettier": "^2.5.0",
		"stylelint": "^13.13.1",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-no-unsupported-browser-features": "^5.0.1",
		"ts-loader": "^8.3.0",
		"typescript": "^4.5.2",
		"web-ext": "^6.6.0",
		"webpack": "^5.64.4",
		"webpack-cli": "^4.7.1"
	}
}
